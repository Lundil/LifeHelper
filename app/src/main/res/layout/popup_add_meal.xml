<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    android:textSize="30dp"
    android:background="@color/cardview_light_background">

    <TextView
        android:id="@+id/titreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"
        android:textSize="16dp"
        android:text="New Meal"/>
    <TableLayout
        android:id="@+id/mainTable"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/titreTextView"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:shrinkColumns="1"
        android:stretchColumns="*" >
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="Name : " >
            </TextView>
            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_below="@+id/titreTextView"
                android:hint="Name"
                android:textSize="16dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:text="Type : " >
            </TextView>
            <Spinner
                android:id="@+id/typeMealSpinner"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/nameEditText"
                android:drawSelectorOnTop="true"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Recipe : " >
            </TextView>
            <EditText
                android:id="@+id/proteinEditText"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/typeSpinner"
                android:textSize="16dp"
                android:hint="Recipe"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add ingredient : " >
            </TextView>
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/quantite"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameEditText"
                android:inputType="number"
                />
            <Spinner
                android:id="@+id/quantiteSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/nameEditText"
                android:drawSelectorOnTop="true"
                />
            <EditText
                android:id="@+id/ingredientSearch"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/nameEditText"
                />
            <Button
                android:id="@+id/addIngredientButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fatEditText"
                android:layout_centerInParent="true"
                android:textSize="16dp"
                android:drawableLeft="@android:drawable/ic_input_add"
                android:text=""/>
        </TableRow>
        <TableRow>
            <ListView
                android:id="@+id/listIngredient"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/carbEditText"
                android:textSize="16dp"
                android:hint="Fat"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/dismissButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fatEditText"
                android:textSize="16dp"
                android:text="Return"/>
            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fatEditText"
                android:textSize="16dp"
                android:text="Save"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>